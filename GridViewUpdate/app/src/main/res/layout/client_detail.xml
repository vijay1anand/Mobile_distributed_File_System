<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/cliid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/ram_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cliid"
        android:text="Available Ram"/>
    <TextView
        android:id="@+id/max_storage_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Storage"
        android:layout_below="@id/ram_box"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/free_storage_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Storage"
        android:layout_below="@id/max_storage_box"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/used_storage_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Used Storage"
        android:layout_below="@id/free_storage_box"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="3052M"
        android:layout_toRightOf="@id/ram_box"
        android:layout_below="@id/cliid"
        android:layout_marginStart="10dp"
        android:id="@+id/ram"/>

    <TextView
        android:id="@+id/max_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9550M"
        android:layout_below="@id/ram_box"
        android:layout_toRightOf="@id/max_storage_box"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/free_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6442M"
        android:layout_below="@id/max_storage_box"
        android:layout_toRightOf="@id/free_storage_box"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/used_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3107M"
        android:layout_below="@id/free_storage_box"
        android:layout_toRightOf="@id/used_storage_box"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <GridView
        android:id="@+id/gridView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:choiceMode="singleChoice"
        android:layout_below="@id/used_storage_box"
        />






</RelativeLayout>